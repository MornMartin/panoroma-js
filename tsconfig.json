{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node",
        "target": "ES6",
        "module": "ES6", // 指定模块化类型
        "declaration": true, // 生成 `.d.ts` 文件
        "outDir": "./dist", // 编译后生成的文件目录
        "strict": false, // 开启严格的类型检测
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
    ],
    "exclude": [
        "node_modules"
    ]
}